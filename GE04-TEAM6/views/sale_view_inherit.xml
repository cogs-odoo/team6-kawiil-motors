<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="view_order_form_inherit_motorcycle" model="ir.ui.view">
            <field name="name">view_order_form_inherit_motorcycle</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm']" position="after">
                    <field name="is_new_customer" invisible="1"/> 
                        <button class="btn btn-primary" type="object" name="execute_pricelist_id" string="Apply discount" attrs="{'invisible':[('is_new_customer','=', False)]}"/>
                </xpath>
            </field>    
        </record>
    </data>
</odoo>
